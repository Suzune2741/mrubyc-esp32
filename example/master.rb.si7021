i2c = I2C.new(22, 21)
si7021 = Si7021.new(i2c)
sw = True
count = 0
while True
  puts "Humi : {si7021.read_humid}"
  puts "Temp : {si7021.read_temp}"
  if count == 30
    sw = !sw
    si7021.set_heater_level(Si7021::HEAT_LEVEL["MEDIUM"])
    si7021.heater(sw)
    print "Heater State : "
    si7021.heater_status ? puts("ON") : puts("OFF")
    count = 0
  end
  count += 1
end
